/* disk_fcfs.c
   FCFS disk scheduling: compute total head movement and sequence. */
#include <stdio.h>
#include <stdlib.h>

int main(){
    int n, head;
    printf("Number of requests: ");
    scanf("%d",&n);
    int req[n];
    printf("Enter requests (cylinder numbers):\n");
    for(int i=0;i<n;i++) scanf("%d",&req[i]);
    printf("Enter initial head position: ");
    scanf("%d",&head);

    int total = 0, current = head;
    printf("Sequence: %d -> ", current);
    for(int i=0;i<n;i++){
        total += abs(req[i] - current);
        current = req[i];
        if(i==n-1) printf("%d\n", current);
        else printf("%d -> ", current);
    }
    printf("Total head movement = %d\n", total);
    return 0;
}
